; In   B: nb fx to skip (can be 0)
    ; hl: points to flag
; Out  A: flags shifted B times
    ; hl: post N fx
    ;  C: mask corresponding to fx

          ld c,mask_fx0
          ld a,(hl):inc l
          ld (dbg1),hl
          ld (dbg2),a
          inc b:dec b
          ret z
skip_fxlp call skip_one_fx:sla c:djnz skip_fxlp
