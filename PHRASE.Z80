          ex de,hl      ; de=dest in current chunk
          push iy:pop hl
      IF dev_checks
;For now only one kind: strict sanity check.
          ld bc,sentinel_phrase_eoc
          or a:sbc hl,bc:add hl,bc:call nz,programming_error
      END
