do_profile = 1
; <<<<< Automated test for timer >>>>>

      IMPORT "const.i"
      IMPORT "memmap.i"
      IMPORT "plyconf.i"
      IMPORT "macro.i"

      ORG code_start
      ENT tests

      IMPORT "testlib.o" ; import it before timer for periods padding
      IMPORT "timer.o"
      IF do_profile
      IMPORT ":orgrel/prof.o"
      END

